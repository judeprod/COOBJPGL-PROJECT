<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.LoginpageController"
      prefHeight="600.0" prefWidth="335.0">

    <center>
        <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" prefHeight="33.0" prefWidth="73.0"
                        text="Back" textFill="WHITE" style="-fx-background-color: black; -fx-background-radius: 500px;" fx:id="BackButton" onAction="#handleBack" />

                <Label layoutX="46.0" layoutY="113.0" text="Username" />
                <Label layoutX="46.0" layoutY="153.0" text="Password" />

                <TextField fx:id="nametextfield" layoutX="139.0" layoutY="109.0" prefHeight="25.0" prefWidth="152.0" style="-fx-background-color: transparent; -fx-border-color: black; -fx-border-radius: 500px;"/>
                <PasswordField fx:id="passwordtextfield" layoutX="139.0" layoutY="149.0" prefHeight="25.0" prefWidth="152.0" style="-fx-background-color: transparent; -fx-border-color: black; -fx-border-radius: 500px;"/>

                <Button fx:id="loginButton" layoutX="38.0" layoutY="494.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="260.0"
                        text="Login" textFill="WHITE" style="-fx-background-color: black; -fx-background-radius: 500px;" onAction="#loginButtonHandler"/>
            </children>
        </Pane>
    </center>
</BorderPane>
